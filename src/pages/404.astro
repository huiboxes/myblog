---
import { Button } from 'astro-pure/user'
import PageLayout from '@/layouts/BaseLayout.astro'

const meta = {
  description: 'Not found',
  title: '404'
}
---

<PageLayout {meta}>
  <div class='px-4 py-10 text-center sm:px-6 lg:px-8'>
    <h1 class='block text-7xl font-bold sm:text-9xl'>404</h1>
    <p class='mt-3 text-muted-foreground'>糟糕，出错了。</p>
    <p class='text-lg'>抱歉，我们找不到您要访问的页面。</p>
    <Button title='返回首页' href='/' variant='ahead' class='mt-5' />
  </div>
</PageLayout>
